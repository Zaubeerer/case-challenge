    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "banking_api.main:app",
                "--host",
                "localhost",
                "--port",
                "8000",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend/",
            "jinja": true,
            "justMyCode": false,
            "python": "${workspaceFolder}/backend/.pixi/env/bin/python",
            "envFile": "${workspaceFolder}/.env",
        },
    ],
}
